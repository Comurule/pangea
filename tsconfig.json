{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "ES2019",
      "incremental": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }
  